{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "sanity/sanity.types.ts"
  ],
  "exclude": [
    "sanity/schemaTypes/**",
    "sanity/sanity.config.ts",
    "sanity/sanity.cli.ts",
    "sanity/node_modules/**"
  ]
}
